{
	"manifest_version" : 2,

	"name" : "NoticeFeed-VITPune",
	"description" : "This chrome extension keeps you updated with latest notices posted on vit.edu .",
	"version" : "1.0",

	"browser_action" :
	{
		
		"default_popup" : "popup.html"
	},

	"icons": { "16": "img/extension_icon.png",
	           "32": "img/extension_icon.png",
	           "48": "img/extension_icon.png",
			   "128": "img/extension_icon.png" },

	"background":
	{
		"page" : "background.html"
	},

	"permissions" : 
	[
		"storage",
		"notifications",
		"http://vit.edu/index.php/news/latest-news"
	],

	"content_security_policy": "script-src 'self'; object-src 'self'"
}
